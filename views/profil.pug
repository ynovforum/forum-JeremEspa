doctype html
html(lang='fr')
    head
        meta(charset='UTF-8')
        title Forum
        link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet")
        link(rel='stylesheet', href='/css/profil.css')

    body
        div(class="navbar-profile")
            div(class="menu-profile")
                a(href="/")
                    span Accueil
                span Courses
                span Applications
                span Students
                span Settings
            div(class="menu-img")
                img(src="icon/sent-mail.png")
            div(class="menu-icon")
                img(src="icon/wallet.png")
                img(src="icon/man-user.png")
                img(src="icon/message.png")
                if user
                    a(href="/profil/" + user.id)
                        span #{user.name}
        div(class="profile-setting")
            div(class="setting")
                h2 Settings
            div(class="automatically")
                p Automatically saved
        div(class="container-profile")
            div(class="myProfile")
                div(class="myProfile-list")
                    div(class="myProfile-active")
                        img(src="icon/man-user.png")
                    div
                        h2 My Profile
                        p How your account looks like
                div(class="myProfile-list")
                    div
                        img(src="icon/notification.png")
                    div
                        h2 Notifications
                        p Email notifications and all around this
                div(class="myProfile-list")
                    div
                        img(src="icon/reload.png")
                    div
                        h2 Download History
                        p View your recent downloads
                div(class="myProfile-list")
                    div
                        img(src="icon/shopping-cart.png")
                    div
                        h2 Billing & invoices
                        p Everything about your money
                div(class="myProfile-list border")
                    div
                        img(src="icon/email.png")
                    div
                        h2 Support
                        p Do you need help?
            div(class="container-right")
                div(class="container-right-1")
                    h2 My Profile
                    div(class="container-right-form")
                        form
                            div(class="container-right-img flex")
                                div(class="bio-left")
                                    img(src="icon/reload.png")
                                div(class="bio-right")
                                    label Your name
                                    input(value=user.name)
                            label Bio
                            textarea #{user.bio}
                            label E-mail Address
                            input(value=user.email)
                            button Change
                            label Password
                            input(type="password", value=user.password)
                            button Change
                div(class="service")
                    h2 Connected Services
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/paypal.png")
                            p Paypal
                        div(class="mail")
                            p me@janlosert.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/spotify.png")
                            p Spotify
                        div(class="mail")
                            p janlosert@dashboard.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/facebook2.png")
                            p Facebook
                        div(class="mail")
                            p me@janlosert.com
                    div(class="service-list")
                        div(class="service-title")
                            img(src="icon/twitter2.png")
                            p Twitter
                        div(class="mail")
                            p @janlosert.com
                    div(class="service-list border")
                        div(class="service-title")
                            img(src="icon/pinterest2.png")
                            p Pinterest
                        div(class="mail")
                            p me@janlosert.com